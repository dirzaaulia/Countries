<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Splash Screen Theme -->
  <style name="Theme.Countries.SplashScreen" parent="Theme.SplashScreen">
    <!-- Set the splash screen background, animated icon, and animation duration. -->
    <item name="windowSplashScreenBackground">#424242</item>

    <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
         animated drawable. One of these is required. -->
    <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
    <!-- Required for animated icons -->
    <item name="windowSplashScreenAnimationDuration">1000</item>

    <!-- Set the theme of the Activity that directly follows your splash screen. -->
    <!-- Required -->
    <item name="postSplashScreenTheme">@style/Theme.Countries</item>
  </style>

  <style name="Theme.Countries" parent="Theme.Material3.DynamicColors.DayNight">
    <item name="android:statusBarColor">@color/immersive_sys_ui</item>
    <item name="android:navigationBarColor">@color/nav_bar</item>\
  </style>
</resources>